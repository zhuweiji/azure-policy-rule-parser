    "parameters": {
        "apiGroups": {
            "allowedValues": null,
            "defaultValue": [
                ""
            ],
            "metadata": {
                "assignPermissions": null,
                "description": "Kubernetes resource api group to reject. Empty string includes the core apiGroup",
                "displayName": "Resource api group",
                "portalReview": true,
                "strongType": null
            },
            "type": "Array"
        },
