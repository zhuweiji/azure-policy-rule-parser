{
    "description": "Mutates securityContext.capabilities.drop to add in \"ALL\". This drops all capabilities for k8s linux containers",
    "displayName": "[Preview]: Mutate K8s Container to drop all capabilities",
    "id": "/providers/Microsoft.Authorization/policyDefinitions/c873b3ba-c605-42e4-a64b-a142a93826fc",
    "metadata": {
        "category": "Kubernetes",
        "preview": true,
        "version": "1.1.0-preview"
    },
    "mode": "Microsoft.Kubernetes.Data",
    "name": "c873b3ba-c605-42e4-a64b-a142a93826fc",
    "parameters": {
        "effect": {
            "allowedValues": [
                "Mutate",
                "Disabled"
            ],
            "defaultValue": "Mutate",
            "metadata": {
                "assignPermissions": null,
                "description": "'Mutate' modifies a non-compliant resource to be compliant when creating or updating. 'Disabled' turns off the policy.",
                "displayName": "Effect",
                "portalReview": true,
                "strongType": null
            },
            "type": "String"
        },
        "excludedNamespaces": {
            "allowedValues": null,
            "defaultValue": [
                "kube-system",
                "gatekeeper-system",
                "azure-arc"
            ],
            "metadata": {
                "additionalProperties": null,
                "assignPermissions": null,
                "description": "List of Kubernetes namespaces to exclude from policy evaluation.",
                "displayName": "Namespace exclusions",
                "strongType": null
            },
            "type": "Array"
        },
        "source": {
            "allowedValues": [
                "All",
                "Generated",
                "Original"
            ],
            "defaultValue": "Original",
            "metadata": {
                "additionalProperties": null,
                "assignPermissions": null,
                "description": "The source k8s object for constraint evaluation. 'Original' means only evaluate against the specific GroupVersionKind specified in the policy definition. 'Generated' means only evaluate against k8s objects generated by Gatekeeper ExpansionTemplates. 'All' means evaluate against both the original object and any generated ones.",
                "displayName": "Source",
                "strongType": null
            },
            "type": "String"
        }
    },
    "policyRule": {
        "if": {
            "equals": "Microsoft.ContainerService/managedClusters",
            "field": "type"
        },
        "then": {
            "details": {
                "excludedNamespaces": "[parameters('excludedNamespaces')]",
                "mutationInfo": {
                    "sourceType": "PublicURL",
                    "url": "https://store.policy.core.windows.net/kubernetes/mutate-container-allowed-capabilities-containers/v1/mutation.yaml"
                },
                "source": "[parameters('source')]"
            },
            "effect": "[parameters('effect')]"
        }
    },
    "policyType": "BuiltIn",
    "systemData": null,
    "type": "Microsoft.Authorization/policyDefinitions"
}