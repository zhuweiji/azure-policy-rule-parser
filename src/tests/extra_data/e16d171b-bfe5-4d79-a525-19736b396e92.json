    "id": "/providers/Microsoft.Authorization/policyDefinitions/e16d171b-bfe5-4d79-a525-19736b396e92",
    "metadata": {
        "category": "Kubernetes",
        "preview": true,
        "version": "1.2.0-preview"
    },
    "mode": "Microsoft.Kubernetes.Data",
    "name": "e16d171b-bfe5-4d79-a525-19736b396e92",
    "parameters": {
        "effect": {
            "allowedValues": [
                "Mutate",
                "Disabled"
            ],
            "defaultValue": "Mutate",
            "metadata": {
                "assignPermissions": null,
                "description": "'Mutate' modifies a non-compliant resource to be compliant when creating or updating. 'Disabled' turns off the policy.",
                "displayName": "Effect",
                "portalReview": true,
                "strongType": null
            },
            "type": "String"
        },
        "excludedNamespaces": {
            "allowedValues": null,
            "defaultValue": [
                "kube-system",
                "gatekeeper-system",
                "azure-arc"
            ],
            "metadata": {
                "additionalProperties": null,
                "assignPermissions": null,
                "description": "List of Kubernetes namespaces to exclude from policy evaluation.",
                "displayName": "Namespace exclusions",
                "strongType": null
            },
            "type": "Array"
        },
        "source": {
            "allowedValues": [
                "All",
                "Generated",
                "Original"
            ],
            "defaultValue": "Original",
            "metadata": {
                "additionalProperties": null,
                "assignPermissions": null,
                "description": "The source k8s object for constraint evaluation. 'Original' means only evaluate against the specific GroupVersionKind specified in the policy definition. 'Generated' means only evaluate against k8s objects generated by Gatekeeper ExpansionTemplates. 'All' means evaluate against both the original object and any generated ones.",
                "displayName": "Source",
                "strongType": null
            },
            "type": "String"
        }
